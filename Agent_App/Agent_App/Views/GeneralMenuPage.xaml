<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agent_App.Views.GeneralMenuPage"
             xmlns:views="clr-namespace:Agent_App.Views"
             xmlns:viewModel="clr-namespace:Agent_App.ViewModels">

    <ContentPage.BindingContext>
        <viewModel:GeneralMenuViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnNotif" Icon="{Binding NotifExist}" Clicked="btnNotif_Clicked"/>
    </ContentPage.ToolbarItems>
    <Grid>
        <!--  main page grid  -->
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="2" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="2" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <!--  row background colors  -->
            <BoxView Grid.Row="0" Color="#FFFFFF" />
            <BoxView Grid.Row="1" Color="Red" />
            <BoxView Grid.Row="2" Color="#FFFFFF" />
            <BoxView Grid.Row="3" Color="#FFFFFF" />
            <BoxView Grid.Row="4" Color="Red" />
            <BoxView Grid.Row="5" Color="#00adbb" />

            <!--  title  -->
            <Label x:Name="lblTitle" FontSize="Large" HorizontalOptions="Center" Text="General Insurance"
               TextColor="#00adbb" VerticalOptions="Center" />

            <!--  inner grid for button layouts  -->

            <Grid Grid.Row="3" ColumnSpacing="30" HorizontalOptions="Center"
              RowSpacing="30" VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="220" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <Button Grid.Row="0"  WidthRequest="200" VerticalOptions="Center"  HorizontalOptions="Center"  Grid.Column="0" x:Name="BtnCusprof" Command="{Binding CustomersPoliciesCommand}" BorderColor="#00adbb" BorderWidth="0"  BackgroundColor="White"   Image="customer.png"  />
                <Button Grid.Row="0" WidthRequest="200" VerticalOptions="Center"  HorizontalOptions="Center" Grid.Column="1" x:Name="BtnQuote" Command="{Binding GetPerformanceCommand}"   BorderColor="#00adbb" BorderWidth="0" BackgroundColor="White" Image="graph.png" />

                

                <StackLayout Grid.Row="2" Grid.ColumnSpan="2">                    
                    <ListView x:Name="listView" 
                      RowHeight="150" ItemTapped="listView_ItemTapped" 
                      ItemsSource="{Binding PoliciesCollection}"  HasUnevenRows="True" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ContentView Padding="10" BackgroundColor="{Binding BackgroundColor}">
                                        <views:GenRemindsTemplate/>
                                    </ContentView>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                </StackLayout>

            </Grid>
        </Grid>

        <Label x:Name="lblEmptyText" Text="No Reminders for Today!" FontAttributes="Italic" FontSize="Medium" VerticalOptions="Center" HorizontalOptions="Center" IsVisible="{Binding IsEmpty}"/>

        <ActivityIndicator x:Name="indicator" IsRunning="{Binding IsBusy}" Color="Green" 
                            HorizontalOptions="Center" VerticalOptions="Center">
            <ActivityIndicator.Scale>
                <OnPlatform x:TypeArguments="x:Double" iOS="4.0" Android="2.0" />
            </ActivityIndicator.Scale>
        </ActivityIndicator>
    </Grid>
</ContentPage>